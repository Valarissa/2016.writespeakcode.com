<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{ name: "HandheldFriendly" , content: "True" }/
    %meta{ name: "MobileOptimized" , content: "320" }/
    %meta{ name: "viewport" , content: "width=device-width, initial-scale=1.0" }/

    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "Write/Speak/Code"

    = stylesheet_link_tag "normalize", "application"
    = javascript_include_tag "all"

    = javascript_include_tag "//use.typekit.net/olz5yha.js"

    :javascript
      try{Typekit.load();}catch(e){ alert(e); }

  %body{class: page_classes}
    .container
      %header.navigation{ role: "banner" }
        .navigation-wrapper
          %h1.logo><
            %a{ href: 'http://writespeakcode.com' }><
              = image_tag '/images/logo/writespeakcode-inverted.png', class: 'screen'
              = image_tag '/images/logo/writespeakcode.png', class: 'print'
          %a#js-mobile-menu.navigation-menu-button{ href: "javascript:void(0)" }
            %i.fa.fa-bars

          %nav{ role: "navigation" }
            %ul#js-navigation-menu.navigation-menu.show
              %li.nav-link.conference.more
                = link_to "Conference", "/index.html"
                %ul.submenu
                  %li
                    = link_to 'Call for Proposals', 'cfp.html'
                  %li
                    = link_to 'Mentors / Panelists / Lightning Talks', 'nominate.html'
              -#    %li
              -#      = link_to 'Our Sponsors!', 'sponsors.html'
              -#    %li.divided
              -#      = link_to 'Write - Thurs 3/19', 'write.html'
              -#    %li
              -#      = link_to 'Speak - Fri 3/20', 'speak.html'
              -#    %li
              -#      = link_to 'Code - Sat 3/21', 'code.html'
              -#    %li.divided
              -#      = link_to 'Sponsor conference', 'sponsor.html'
              -#    %li
              -#      = link_to 'Scholarships', 'scholarships.html'
              -#    %li.divided
              -#      = link_to 'Speakers', 'speakers.html'
              -#    %li
              -#      = link_to 'Schedule', 'schedule.html'
              -#    %li
              -#      = link_to 'Program of Events', 'program.html'
              -#    %li.divided
              -#      = link_to 'Testimonials', 'testimonials.html'
              -#    %li
              -#      = link_to 'Childcare', 'childcare.html'
              -#    %li
              -#      = link_to 'Accessibility', 'childcare.html'

              %li.nav-link.meetups
                %a{ href:"http://writespeakcode.com/chapters" } Chapters

              %li.nav-link.events
                %a{ href:"http://writespeakcode.com/events" } Workshops
                -#%ul.submenu
                  -#%li
                    -#%a{ href:"http://writespeakcode.com/events/workshops"} Workshops
                  -#%li
                    -#%a{ href:"http://writespeakcode.com/events/custom" } Training &amp; Custom

              %li.nav-link.about.more
                %a{ href:"http://writespeakcode.com/about" } About
                %ul.submenu
                  %li
                    %a{ href:"http://writespeakcode.com/about/organizers"} Organizers
                  %li
                    = link_to "Code of Conduct", "http://writespeakcode.com/about/code-of-conduct"

              %li.nav-link.blog
                %a{ href:"http://writespeakcode.com/blog" } Blog

              %li.nav-link.sponsors
                = link_to "Sponsor", "sponsor.html"

          -#%div.navigation-tools
          -#  %div.search-bar
          -#    = partial "mailchimp"

      %section#main{ class: "#{current_page.data.page_class}" }
        = yield

      %footer.footer{ role: "contentinfo" }
        .footer-logo

        %ul
          %li
            = link_to "About", "http://writespeakcode.com/about"
          %li
            = link_to "Organizers", "http://writespeakcode.com/about/organizers"

        .footer-secondary-links
          %ul
            %li
              = link_to "Code of Conduct", "http://writespeakcode.com/about/code-of-conduct"
            %li Logo design by McKenna Lowry and Maryanne Ko
            %li
              = "&copy; Rebecca Miller-Webster 2013-#{DateTime.now.year}".html_safe

          %ul.footer-social
            %li
              %a{ href: 'http://www.twitter.com/writespeakcode' }
                %span.fa.fa-twitter
            %li
              %a{ href: 'http://www.github.com/writespeakcode' }
                %span.fa.fa-github
            %li
              %a{ href: 'mailto:info@writespeakcode.com' }
